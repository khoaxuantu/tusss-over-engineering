{
  "name": "@tusss/jest",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && swc src -d dist --strip-leading-paths && pnpm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "check:types": "tsc --noEmit"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@tusss/core": "workspace:*"
  },
  "devDependencies": {
    "@tusss/tsconfig": "workspace:*",
    "@golevelup/ts-jest": "^0.7.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.3",
    "rimraf": "^6.1.2"
  },
  "peerDependencies": {
    "jest": "^30.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./contexts": {
      "types": "./dist/contexts/index.d.ts",
      "require": "./dist/contexts/index.js",
      "import": "./dist/contexts/index.js"
    },
    "./examples": {
      "types": "./dist/examples/index.d.ts",
      "require": "./dist/examples/index.js",
      "import": "./dist/examples/index.js"
    }
  }
}
