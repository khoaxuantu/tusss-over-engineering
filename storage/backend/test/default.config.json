{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/$1"
  },
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "<rootDir>/../scripts/ts-jest-transform.js"
  },
  "testEnvironment": "node",
  "testEnvironmentOptions": {
    "globalsCleanup": "on"
  }
}
